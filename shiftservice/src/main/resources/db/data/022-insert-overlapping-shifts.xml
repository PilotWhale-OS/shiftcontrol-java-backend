<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="022-insert-overlapping-shifts" author="paul" context="dev">

        <insert tableName="shift">
            <column name="id" valueNumeric="21"/>
            <column name="activity_id" valueNumeric="1"/>
            <column name="shift_plan_id" valueNumeric="1"/>
            <column name="name" value="Registration Noon"/>
            <column name="short_description" value="Noon registration desk shift"/>
            <column name="long_description" value="Shift long description"/>
            <column name="start_time" value="2025-09-12T07:00:00Z"/>
            <column name="end_time" value="2025-09-12T08:00:01Z"/>
            <column name="lock_status" value="SELF_ASSIGNABLE"/>
        </insert>

        <insert tableName="position_slot">
            <column name="id" valueNumeric="21"/>
            <column name="name" value="Noon Registration Slot"/>
            <column name="description" value="This is a description for Noon Registration Slot"/>
            <column name="skip_auto_assignment" valueBoolean="false"/>
            <column name="shift_id" valueNumeric="21"/>
            <column name="role_id" valueNumeric="1"/>
            <column name="desired_volunteer_count" valueNumeric="2"/>
        </insert>

    </changeSet>

</databaseChangeLog>

<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

  <!-- Create volunteer_volunteering_shift_plan Join Table -->
  <changeSet id="020-create-volunteer-volunteering" author="patrick">

    <createTable tableName="volunteer_volunteering_shift_plan">

      <column name="shift_plan_id" type="BIGINT">
        <constraints nullable="false"/>
      </column>

      <column name="volunteer_id" type="BIGINT">
        <constraints nullable="false"/>
      </column>

    </createTable>

    <addPrimaryKey
      tableName="volunteer_volunteering_shift_plan"
      columnNames="shift_plan_id, volunteer_id"
      constraintName="pk_volunteer_volunteering_shift_plan"/>

    <addForeignKeyConstraint
      baseTableName="volunteer_volunteering_shift_plan"
      baseColumnNames="shift_plan_id"
      referencedTableName="shift_plan"
      referencedColumnNames="id"
      constraintName="fk_volunteer_volunteering_shift_plan_shiftplan"/>

    <addForeignKeyConstraint
      baseTableName="volunteer_volunteering_shift_plan"
      baseColumnNames="volunteer_id"
      referencedTableName="volunteer"
      referencedColumnNames="id"
      constraintName="fk_volunteer_volunteering_shift_plan_volunteer"/>

  </changeSet>

  <!-- Create volunteer_planning_shift_plan Join Table -->
  <changeSet id="021-create-volunteer-planning" author="paul">

    <createTable tableName="volunteer_planning_shift_plan">

      <column name="shift_plan_id" type="BIGINT">
        <constraints nullable="false"/>
      </column>

      <column name="volunteer_id" type="BIGINT">
        <constraints nullable="false"/>
      </column>

    </createTable>

    <addPrimaryKey
      tableName="volunteer_planning_shift_plan"
      columnNames="shift_plan_id, volunteer_id"
      constraintName="pk_volunteer_planning_shift_plan"/>

    <addForeignKeyConstraint
      baseTableName="volunteer_planning_shift_plan"
      baseColumnNames="shift_plan_id"
      referencedTableName="shift_plan"
      referencedColumnNames="id"
      constraintName="fk_volunteer_planning_shift_plan_shiftplan"/>

    <addForeignKeyConstraint
      baseTableName="volunteer_planning_shift_plan"
      baseColumnNames="volunteer_id"
      referencedTableName="volunteer"
      referencedColumnNames="id"
      constraintName="fk_volunteer_planning_shift_plan_volunteer"/>

  </changeSet>

</databaseChangeLog>


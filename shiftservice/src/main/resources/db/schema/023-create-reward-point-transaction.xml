<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="023-create-reward-point-transaction" author="flo">
        <createTable tableName="reward_point_transaction">

            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_reward_point_transaction"/>
            </column>

            <column name="volunteer_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="event_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="shift_plan_id" type="BIGINT">
                <constraints nullable="true"/>
            </column>

            <column name="position_slot_id" type="BIGINT">
                <constraints nullable="true"/>
            </column>

            <column name="points" type="INT">
                <constraints nullable="false"/>
            </column>

            <column name="type" type="VARCHAR(32)">
                <constraints nullable="false"/>
            </column>

            <column name="source_key" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="metadata" type="TEXT">
                <constraints nullable="true"/>
            </column>

        </createTable>

        <!-- Indexes -->
        <createIndex indexName="idx_rpt_volunteer" tableName="reward_point_transaction">
            <column name="volunteer_id"/>
        </createIndex>

        <createIndex indexName="idx_rpt_volunteer_event" tableName="reward_point_transaction">
            <column name="volunteer_id"/>
            <column name="event_id"/>
        </createIndex>

        <createIndex indexName="idx_rpt_volunteer_shiftplan" tableName="reward_point_transaction">
            <column name="volunteer_id"/>
            <column name="shift_plan_id"/>
        </createIndex>

        <createIndex indexName="idx_rpt_slot" tableName="reward_point_transaction">
            <column name="position_slot_id"/>
        </createIndex>

    </changeSet>

</databaseChangeLog>

<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="013-create-position-constraint" author="paul">
        <createTable tableName="position_constraint">

            <column name="position_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

        </createTable>

        <!-- Primary key on position_id -->
        <addPrimaryKey
                tableName="position_constraint"
                columnNames="position_id"
                constraintName="pk_position_constraint"/>

        <!-- Foreign key to PositionSlot -->
        <addForeignKeyConstraint
                baseTableName="position_constraint"
                baseColumnNames="position_id"
                referencedTableName="position_slot"
                referencedColumnNames="id"
                constraintName="fk_position_constraint_position"/>

    </changeSet>

</databaseChangeLog>

<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

  <!-- Create Shift-Location Join Table -->
  <changeSet id="016-create-shift-location" author="paul">

    <createTable tableName="shift_location">

      <column name="shift_id" type="BIGINT">
        <constraints nullable="false"/>
      </column>

      <column name="location_id" type="BIGINT">
        <constraints nullable="false"/>
      </column>

    </createTable>

    <!-- Primary key on both columns -->
    <addPrimaryKey
      tableName="shift_location"
      columnNames="shift_id, location_id"
      constraintName="pk_shift_location"/>

    <!-- Foreign key to shift -->
    <addForeignKeyConstraint
      baseTableName="shift_location"
      baseColumnNames="shift_id"
      referencedTableName="shift"
      referencedColumnNames="id"
      constraintName="fk_shift_location_shift"/>

    <!-- Foreign key to location -->
    <addForeignKeyConstraint
      baseTableName="shift_location"
      baseColumnNames="location_id"
      referencedTableName="location"
      referencedColumnNames="id"
      constraintName="fk_shift_location_location"/>

  </changeSet>

</databaseChangeLog>

<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

  <changeSet id="015-create-assignment-switch-request" author="paul">

    <createTable tableName="assignment_switch_request">

      <column name="id" type="BIGINT" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>

      <!-- Requester Assignment -->
      <column name="offering_assignment_id" type="BIGINT">
        <constraints nullable="false"/>
      </column>

      <!-- Requested Assignment -->
      <column name="requested_assignment_id" type="BIGINT">
        <constraints nullable="false"/>
      </column>

      <column name="status" type="VARCHAR(50)">
        <constraints nullable="false"/>
      </column>

      <column name="created_at" type="TIMESTAMP">
        <constraints nullable="false"/>
      </column>

    </createTable>

    <!-- Foreign key to offering assignment -->
    <addForeignKeyConstraint
      baseTableName="assignment_switch_request"
      baseColumnNames="offering_assignment_id"
      referencedTableName="assignment"
      referencedColumnNames="id"
      constraintName="fk_switch_request_offering_assignment"
      onDelete="CASCADE"/>

    <!-- Foreign key to requested assignment -->
    <addForeignKeyConstraint
      baseTableName="assignment_switch_request"
      baseColumnNames="requested_assignment_id"
      referencedTableName="assignment"
      referencedColumnNames="id"
      constraintName="fk_switch_request_requested_assignment"
      onDelete="CASCADE"/>

    <!-- Optional: unique constraint to prevent duplicate trades -->
    <addUniqueConstraint
      tableName="assignment_switch_request"
      columnNames="offering_assignment_id, requested_assignment_id"
      constraintName="uq_switch_request_pair"/>

  </changeSet>

</databaseChangeLog>

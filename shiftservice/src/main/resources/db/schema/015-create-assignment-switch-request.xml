<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="015-create-assignment-switch-request" author="paul">
        <createTable tableName="assignment_switch_request">

            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <!-- Requester Assignment -->
            <column name="requester_position_slot_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="requester_volunteer_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <!-- Requested Assignment -->
            <column name="requested_position_slot_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="requested_volunteer_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>

            <column name="reason" type="VARCHAR(255)"/>
        </createTable>

        <!-- Foreign keys to Assignment (composite) -->
        <addForeignKeyConstraint
                baseTableName="assignment_switch_request"
                baseColumnNames="requester_position_slot_id, requester_volunteer_id"
                referencedTableName="assignment"
                referencedColumnNames="position_slot_id, volunteer_id"
                constraintName="fk_asr_requester_assignment"/>

        <addForeignKeyConstraint
                baseTableName="assignment_switch_request"
                baseColumnNames="requested_position_slot_id, requested_volunteer_id"
                referencedTableName="assignment"
                referencedColumnNames="position_slot_id, volunteer_id"
                constraintName="fk_asr_requested_assignment"/>

    </changeSet>

</databaseChangeLog>

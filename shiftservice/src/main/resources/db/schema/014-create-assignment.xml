<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="014-create-assignment" author="paul">

        <createTable tableName="assignment">

            <column name="id" type="BIGINT" autoIncrement="true">
              <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="position_slot_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="assigned_volunteer_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>

            <column name="accepted_reward_points" type="INT">
                <constraints nullable="false"/>
            </column>

        </createTable>

        <!-- slot-user must be unique -->
        <addUniqueConstraint
          tableName="assignment"
          columnNames="position_slot_id, assigned_volunteer_id"
          constraintName="uq_assignment_slot_volunteer"/>

        <createIndex
          indexName="idx_assignment_slot_volunteer"
          tableName="assignment">
          <column name="position_slot_id"/>
          <column name="assigned_volunteer_id"/>
        </createIndex>

        <!-- Foreign key to PositionSlot -->
        <addForeignKeyConstraint
                baseTableName="assignment"
                baseColumnNames="position_slot_id"
                referencedTableName="position_slot"
                referencedColumnNames="id"
                constraintName="fk_assignment_position_slot"/>

        <!-- Foreign key to Volunteer -->
        <addForeignKeyConstraint
                baseTableName="assignment"
                baseColumnNames="assigned_volunteer_id"
                referencedTableName="volunteer"
                referencedColumnNames="id"
                constraintName="fk_assignment_volunteer"/>

    </changeSet>

</databaseChangeLog>

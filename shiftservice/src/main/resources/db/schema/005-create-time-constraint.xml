<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

  <changeSet id="005-create-time-constraint" author="paul">
    <createTable tableName="time_constraint">

      <column name="id" type="BIGINT" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>

      <column name="volunteer_id" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>

      <column name="event_id" type="BIGINT">
        <constraints nullable="false"/>
      </column>

      <column name="type" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>

      <column name="start_time" type="TIMESTAMP">
        <constraints nullable="false"/>
      </column>

      <column name="end_time" type="TIMESTAMP">
        <constraints nullable="false"/>
      </column>

    </createTable>

    <!-- Foreign key to event -->
    <addForeignKeyConstraint
      baseTableName="time_constraint"
      baseColumnNames="event_id"
      referencedTableName="event"
      referencedColumnNames="id"
      constraintName="fk_tc_event"/>

    <!-- Foreign key to volunteer -->
    <addForeignKeyConstraint
      baseTableName="time_constraint"
      baseColumnNames="volunteer_id"
      referencedTableName="volunteer"
      referencedColumnNames="id"
      constraintName="fk_tc_volunteer"/>

  </changeSet>

</databaseChangeLog>

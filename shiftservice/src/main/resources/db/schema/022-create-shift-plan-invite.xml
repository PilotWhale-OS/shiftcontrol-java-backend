<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="022-create-shift-plan-invite" author="flo">
        <createTable tableName="shift_plan_invite">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="code" type="VARCHAR(64)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="type" type="VARCHAR(32)">
                <constraints nullable="false"/>
            </column>

            <column name="shift_plan_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="is_active" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>

            <column name="expires_at" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>

            <column name="max_uses" type="INT">
                <constraints nullable="true"/>
            </column>

            <column name="uses" type="INT">
                <constraints nullable="false"/>
            </column>

            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="revoked_at" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="shift_plan_invite"
                baseColumnNames="shift_plan_id"
                referencedTableName="shift_plan"
                referencedColumnNames="id"
                constraintName="fk_shift_plan_invite_shift_plan"/>

        <createTable tableName="shift_plan_invite_role">
            <column name="invite_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="role_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey
                tableName="shift_plan_invite_role"
                columnNames="invite_id,role_id"
                constraintName="pk_shift_plan_invite_role"/>

        <addForeignKeyConstraint
                baseTableName="shift_plan_invite_role"
                baseColumnNames="invite_id"
                referencedTableName="shift_plan_invite"
                referencedColumnNames="id"
                constraintName="fk_invite_role_invite"/>

        <addForeignKeyConstraint
                baseTableName="shift_plan_invite_role"
                baseColumnNames="role_id"
                referencedTableName="role"
                referencedColumnNames="id"
                constraintName="fk_invite_role_role"/>

        <createIndex tableName="shift_plan_invite" indexName="idx_shift_plan_invite_shift_plan_id">
            <column name="shift_plan_id"/>
        </createIndex>

        <createIndex tableName="shift_plan_invite_role" indexName="idx_invite_role_invite_id">
            <column name="invite_id"/>
        </createIndex>

        <createIndex tableName="shift_plan_invite_role" indexName="idx_invite_role_role_id">
            <column name="role_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
